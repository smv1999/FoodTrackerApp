<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#542a0c"
    android:gravity="center"
    tools:context="com.example.exam.foodtrack.MainActivity"
    android:weightSum="2">



    <!--first section-->

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:id="@+id/r1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/foodimagebg"
        android:visibility="visible"
        >


        <!--<ImageView-->
            <!--android:layout_width="120dp"-->
            <!--android:layout_height="120dp"-->
            <!--android:id="@+id/login_imageview1"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:src="@drawable/foodtrackbg"/>-->


        <EditText
            android:id="@+id/username"
            android:layout_width="300dp"
            android:lines="1"
            android:layout_gravity="center"
            android:hint="Username"
            android:padding="6dp"
            android:background="@drawable/inputs"
            android:maxLength="50"
            android:layout_height="wrap_content"
            />



        <EditText
            android:id="@+id/password"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:lines="1"
            android:hint="Password"
            android:padding="6dp"
            android:background="@drawable/inputs"
            android:maxLength="10"
            android:layout_gravity="center"
            android:inputType="textPassword"
            />

        <Button
            android:id="@+id/login"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Log in"
            android:gravity="center"
            android:cursorVisible="true"
            android:layout_marginTop="5sp"
            android:background="@drawable/buttons"/>


        <TextView
            android:id="@+id/reg1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#b20000"
            android:cursorVisible="true"
            android:layout_marginTop="5sp"
            style="?android:animation"
            />

    </LinearLayout>





    <!--second layout-->

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/r2"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/foodimagebg"
        >


        <!--<ImageView-->
            <!--android:layout_width="120dp"-->
            <!--android:layout_height="120dp"-->
            <!--android:id="@+id/login_imageview2"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:src="@drawable/foodtrackbg"/>-->

        <EditText
            android:id="@+id/uname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:lines="1"
            android:background="@drawable/inputs"
            android:maxLength="50"
            android:padding="6dp"
            android:layout_marginTop="5sp"
            android:hint="Username"/>



        <EditText
            android:id="@+id/pwd"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxLength="10"
            android:lines="1"
            android:padding="6dp"
            android:background="@drawable/inputs"
            android:inputType="textPassword"
            android:layout_marginTop="15sp"
            android:hint="Password"/>

        <Button
            android:id="@+id/reg2"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:text="Register"
            android:cursorVisible="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="35sp"
            android:background="@drawable/buttons"/>

    </LinearLayout>


</LinearLayout>